        <TextBlock x:ConnectionId='10' x:Name="textBlock_Copy4" HorizontalAlignment="Left" Margin="310,591,0,0" TextWrapping="Wrap" Text="255" VerticalAlignment="Top" RenderTransformOrigin="0.667,0.638" />
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="212" Margin="13,412,0,0" VerticalAlignment="Top" Width="335"/>
        <TextBlock x:ConnectionId='11' x:Name="textBlock1" HorizontalAlignment="Left" Margin="15,382,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332">
            <Run Text="RGB-Sliders"/>
            <LineBreak/>
            <Run/>
        </TextBlock>
        <TextBlock x:ConnectionId='12' x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="13,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332" Height="22">
            <Run Text="Pre-set colours"/>
            <LineBreak/>
            <Run/>
        </TextBlock>
        <Image x:ConnectionId='13' x:Name="image" HorizontalAlignment="Left" Height="133" Margin="210,11,0,0" VerticalAlignment="Top" Width="132" Source="Assets/On-off.jpg"                      />

        <Button x:ConnectionId='14' x:Name="buttonColor1" HorizontalAlignment="Left" Margin="15,163,0,0" VerticalAlignment="Top" Height="60" Width="62"                            Background="Magenta" BorderBrush="Black"/>
        <Button x:ConnectionId='15' x:Name="buttonColor2" HorizontalAlignment="Left" Margin="82,163,0,0" VerticalAlignment="Top" Height="60" Width="62"                            Background="#FF8000FF" BorderBrush="Black"/>
        <Button x:ConnectionId='16' x:Name="buttonColor3" HorizontalAlignment="Left" Margin="149,163,0,0" VerticalAlignment="Top" Height="60" Width="62"                            Background="Blue" BorderBrush="Black"/>
        <Button x:ConnectionId='17' x:Name="buttonColor4" HorizontalAlignment="Left" Margin="216,163,0,0" VerticalAlignment="Top" Height="60" Width="62"                            Background="#FF0080FF" BorderBrush="Black"/>
        <Button x:ConnectionId='18' x:Name="buttonColor5" HorizontalAlignment="Left" Margin="283,163,0,0" VerticalAlignment="Top" Height="60" Width="62"                            Background="Cyan" BorderBrush="Black"/>
        <Button x:ConnectionId='19' x:Name="buttonColor6" HorizontalAlignment="Left" Margin="15,228,0,0" VerticalAlignment="Top" Height="60" Width="62"                            Background="#FF00FF80" BorderBrush="Black"/>
        <Button x:ConnectionId='20' x:Name="buttonColor7" HorizontalAlignment="Left" Margin="82,228,0,0" VerticalAlignment="Top" Height="60" Width="62"                            Background="Lime" BorderBrush="Black"/>
        <Button x:ConnectionId='21' x:Name="buttonColor8" HorizontalAlignment="Left" Margin="149,228,0,0" VerticalAlignment="Top" Height="60" Width="62"                            Background="#FF80FF00" BorderBrush="Black"/>
        <Button x:ConnectionId='22' x:Name="buttonColor9" HorizontalAlignment="Left" Margin="216,228,0,0" VerticalAlignment="Top" Height="60" Width="62"                            Background="Yellow" BorderBrush="Black"/>
        <Button x:ConnectionId='23' x:Name="buttonColor10" HorizontalAlignment="Left" Margin="283,228,0,0" VerticalAlignment="Top" Height="60" Width="62"                             Background="#FFFF8000" BorderBrush="Black"/>
        <Button x:ConnectionId='24' x:Name="buttonColor11" HorizontalAlignment="Left" Margin="15,293,0,0" VerticalAlignment="Top" Height="60" Width="62"                             Background="Red" BorderBrush="Black"/>
        <Button x:ConnectionId='25' x:Name="buttonColor12" HorizontalAlignment="Left" Margin="82,293,0,0" VerticalAlignment="Top" Height="60" Width="62"                             Background="#FFFF0080" BorderBrush="Black"/>
        <Button x:ConnectionId='26' x:Name="buttonColor13" HorizontalAlignment="Left" Margin="149,293,0,0" VerticalAlignment="Top" Height="60" Width="62"                             BorderBrush="Black" Background="White"/>
        <Button x:ConnectionId='27' x:Name="buttonColor14" HorizontalAlignment="Left" Margin="216,293,0,0" VerticalAlignment="Top" Height="60" Width="62"                             Background="Gray" BorderBrush="Black"/>
        <Button x:ConnectionId='28' x:Name="buttonColor15" HorizontalAlignment="Left" Margin="283,293,0,0" VerticalAlignment="Top" Height="60" Width="62"                             Background="Black" BorderBrush="Black"/>
    </Grid>
</Page>

