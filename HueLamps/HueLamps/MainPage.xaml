<Page
    x:Class="HueLamps.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HueLamps"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="35,36,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" TextChanged="textBox_TextChanged" Width="282"/>
        <Button x:Name="button" Content="Register" HorizontalAlignment="Left" Margin="37,89,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="477" Margin="23,143,0,0" VerticalAlignment="Top" Width="308" IsSynchronizedWithCurrentItem="False" SelectionChanged="listBox_SelectionChanged" />

    </Grid>
</Page>
